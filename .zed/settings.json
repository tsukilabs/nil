{
  "tab_size": 2,
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "targetDir": true
        },
        "linkedProjects": [
          "./Cargo.toml",
          "./scripts/build-client.rs",
          "./scripts/build-docs.rs",
          "./scripts/build-server.rs",
          "./scripts/build-wasm.rs",
          "./scripts/clean.rs",
          "./scripts/run-clippy.rs",
          "./scripts/sort-namegen.rs",
          "./scripts/start-dev.rs",
          "./scripts/start-server.rs",
          "./scripts/test.rs"
        ]
      }
    }
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "JSONC": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "Vue.js": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "YAML": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    }
  }
}
