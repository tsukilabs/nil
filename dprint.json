{
  "indentWidth": 2,
  "lineWidth": 100,
  "newLineKind": "lf",
  "useTabs": false,
  "typescript": {
    "arrowFunction.useParentheses": "force",
    "commentLine.forceSpaceAfterSlashes": true,
    "exportDeclaration.sortNamedExports": "maintain",
    "exportDeclaration.sortTypeOnlyExports": "none",
    "importDeclaration.sortNamedImports": "maintain",
    "importDeclaration.sortTypeOnlyImports": "none",
    "module.sortExportDeclarations": "maintain",
    "module.sortImportDeclarations": "maintain",
    "nextControlFlowPosition": "nextLine",
    "operatorPosition": "sameLine",
    "quoteProps": "asNeeded",
    "quoteStyle": "alwaysSingle",
    "semiColons": "always",
    "spaceAround": false,
    "spaceSurroundingProperties": true,
    "trailingCommas": "onlyMultiLine"
  },
  "markup": {
    "printWidth": 120,
    "quotes": "double",
    "scriptIndent": true,
    "styleIndent": true,
    "vBindSameNameShortHand": true,
    "vBindStyle": "short",
    "vForDelimiterStyle": "of",
    "vSlotStyle": "short",
    "vOnStyle": "short",
    "vue.scriptIndent": false,
    "vue.styleIndent": false
  },
  "malva": {
    "hexCase": "lower",
    "hexColorLength": "long",
    "printWidth": 100,
    "quotes": "alwaysDouble"
  },
  "json": {
    "array.preferSingleLine": true,
    "object.preferSingleLine": false
  },
  "excludes": [
    "**/android",
    "**/autogenerated",
    "**/dist",
    "**/pkg",
    "**/schemas",
    "**/LICENSE",
    "**/registry.json",
    "**/*-lock.yaml",
    "**/*.xml"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.95.15.wasm",
    "https://plugins.dprint.dev/json-0.21.1.wasm",
    "https://plugins.dprint.dev/markdown-0.21.1.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.15.2.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.26.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.6.0.wasm"
  ]
}
