{
  "productName": "Call of Nil",
  "version": "0.1.0",
  "identifier": "tsukilabs.nil",
  "build": {
    "beforeDevCommand": "pnpm run -F ui dev",
    "beforeBuildCommand": "pnpm run -F ui build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../../ui/dist",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCACHE/**", "$APPCONFIG/**", "$APPDATA/**"]
      },
      "csp": {
        "default-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost http://tauri.localhost http://nil.dev.br",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "script-src": "'self' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "publisher": "Tsukilabs",
    "shortDescription": "Call of Nil",
    "license": "AGPL-3.0-only",
    "licenseFile": "../../LICENSE",
    "homepage": "https://nil.dev.br/",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
